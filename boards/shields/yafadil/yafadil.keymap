/ {
    behaviors {
        ht: hold_tap {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <222>;
            quick-tap-ms = <150>;
            require-prior-idle-ms = <100>;
            bindings = <&kp>, <&kp>;
        };

        htt: hold_tap_2 {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <169>;
            quick-tap-ms = <150>;
            require-prior-idle-ms = <100>;
            bindings = <&kp>, <&kp>;
        };
/*
WOuld like to ahve one shot shift but layer on hold
        st: stick_tap {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <220>;
            quick-tap-ms = <150>;
            require-prior-idle-ms = <100>;
            bindings = <&sk>, <&mo>;
        };
*/
	// MOD MORPHES
	hycol: hyphen_colon {
	    compatible = "zmk,behavior-mod-morph";
            label = "DASH_COLON";
            #binding-cells = <0>;
            bindings = <&kp MINUS>, <&kp COLON>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
	};

	spcom: special_comma {
	    compatible = "zmk,behavior-mod-morph";
            label = "SPECIAL_COM";
            #binding-cells = <0>;
            bindings = <&kp COMMA>, <&kp EXCL>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
	};

	spdot: special_dot {
	    compatible = "zmk,behavior-mod-morph";
            label = "SPECIAL_DOT";
            #binding-cells = <0>;
            bindings = <&kp DOT>, <&kp QMARK>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
	};
    };// END BEHAVIOURS

    macros {// Begin macros
        // steno-lite macros
            st_the: st_the {
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_tap &kp T &kp H &kp E>
                    ;
            };

        st_ng: st_ng {
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_tap &kp N &kp G>
                    ;
            };


        st_ing: st_ing {
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_tap &kp I &kp N &kp G>
                    ;
            };

        st_dotspacecap: st_dotspacecap {
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_tap &kp DOT &kp SPACE>
                    , <&sk LSHIFT>
                    ;
            };

        st_ly: st_ly {
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_tap &kp L &kp Y>
                    ;
            };

        st_tion: st_tion {
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings
                    = <&macro_tap &kp T &kp I &kp O &kp N>
                    ;
            };
    };// END Macros

    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };// ENd CONDITIONAL LAYERS

	// START COMBOS
